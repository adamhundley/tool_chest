<%= form_for [:admin, @tool] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :price %>
  <%= f.text_field :price %><br>
  <%= f.label :quantity %>
  <%= f.text_field :quantity %><br><br>
  <%= f.select :category_id do %>
    <% @categories.each do |c| %>
      <%= content_tag(:option, c.name, value: c.id) %>
      <%= {Prompt: "Select Category"} %>
    <% end %>
  <% end %><br>
  <%= f.select :user_id do %>
    <% @users.each do |user| %>
      <%= content_tag(:option, user.username, value: user.id) %>
    <% end %>
  <% end %><br>
  <%= f.submit %>
<% end %>
